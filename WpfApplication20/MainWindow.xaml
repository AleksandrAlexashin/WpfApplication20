                <Button Content="+" FontWeight="Bold" FontSize="22" FontFamily="Tahoma" Background="#FFFF00E8"/>
                <Button Content="C" BorderBrush="Black" FontWeight="Bold" FontSize="22" FontFamily="Tahoma" Background="#FFE08224" />
