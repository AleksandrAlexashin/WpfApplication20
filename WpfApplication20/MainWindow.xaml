                <Button Content="." BorderBrush="Black" FontWeight="Bold" FontSize="22" FontFamily="Tahoma" Background="#FFE08224"/>
                <Button Content="=" BorderBrush="Black" FontWeight="Bold" FontSize="22" FontFamily="Tahoma" Background="#FF24BEE0"/>








            </UniformGrid>

        </Grid>


    </Grid>

